/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
  font-size: 32rpx;
  color: #333;
}

.counter {
  margin-top: 50px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.counter button {
  margin-bottom: 20rpx;
  width: 200rpx;
  height: 80rpx;
  background-color: #07C160;
  color: white;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.counter text {
  font-size: 36rpx;
  color: #333;
  margin-top: 20rpx;
}