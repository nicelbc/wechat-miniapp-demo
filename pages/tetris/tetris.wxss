/* tetris.wxss */
.game-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 游戏信息面板 */
.game-info {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  max-width: 300px;
  margin-bottom: 20rpx;
  background-color: white;
  border-radius: 10rpx;
  padding: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-label {
  font-size: 24rpx;
  color: #666;
}

.info-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 下一个方块预览 */
.next-piece-container {
  margin-bottom: 20rpx;
  background-color: white;
  border-radius: 10rpx;
  padding: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.next-piece-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.next-piece-board {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.next-piece-row {
  display: flex;
  flex-direction: row;
}

.next-piece-cell {
  width: 20rpx;
  height: 20rpx;
  border: 1rpx solid #ddd;
  margin: 0 1rpx;
}

.next-piece-cell.filled {
  border: 1rpx solid #333;
}

.next-piece-cell.empty {
  background-color: transparent;
}

/* 游戏板 */
.game-board {
  position: relative;
  display: flex;
  flex-direction: column;
  background-color: #f0f0f0;
  border: 3rpx solid #ccc;
  border-radius: 5rpx;
  padding: 2rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  touch-action: none;
  width: 324rpx; /* 10 cells * 30rpx + 20rpx margins + 4rpx padding */
}

.board-row {
  display: flex;
  flex-direction: row;
}

.board-cell {
  width: 30rpx;
  height: 30rpx;
  border: 1rpx solid #bbb;
  margin: 0 1rpx;
}

.board-cell.filled {
  border: 1rpx solid #000;
}

.board-cell.empty {
  background-color: #e8e8e8;
}

/* 当前方块叠加层 */
.current-piece-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

/* 游戏状态覆盖层 */
.game-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.overlay-content {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  max-width: 80%;
}

.overlay-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.overlay-score {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.overlay-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.game-button {
  width: 200rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  color: white;
}

.start-button {
  background-color: #07C160;
}

.resume-button {
  background-color: #07C160;
}

/* 控制按钮 */
.controls {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.control-row {
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 15rpx;
}

.control-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 15rpx;
  font-size: 36rpx;
  font-weight: bold;
  background-color: #fff;
  color: #333;
  border: 2rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
}

.control-button:active {
  background-color: #e0e0e0;
}

.rotate-button {
  background-color: #07C160;
  color: white;
  border-color: #07C160;
}

.drop-button {
  background-color: #f44336;
  color: white;
  border-color: #f44336;
}

.pause-button {
  background-color: #ff9800;
  color: white;
  border-color: #ff9800;
}

/* 高分记录 */
.high-scores {
  margin-top: 30rpx;
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  width: 100%;
  max-width: 300px;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.high-scores-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
  text-align: center;
}

.high-scores-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.high-score-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 12rpx;
  background-color: #f9f9f9;
  border-radius: 5rpx;
}

.high-score-rank {
  font-size: 24rpx;
  color: #666;
  width: 30rpx;
}

.high-score-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #07C160;
  flex: 1;
  text-align: center;
}

.high-score-level {
  font-size: 20rpx;
  color: #999;
}

/* 响应式设计 */
@media (min-width: 375px) {
  .board-cell {
    width: 32rpx;
    height: 32rpx;
  }

  .next-piece-cell {
    width: 22rpx;
    height: 22rpx;
  }
}

@media (min-width: 414px) {
  .board-cell {
    width: 35rpx;
    height: 35rpx;
  }

  .next-piece-cell {
    width: 24rpx;
    height: 24rpx;
  }
}